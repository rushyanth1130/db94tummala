extends layout

block content
 div(class="container-fluid")
  h1= title
  -let nutDesc=thenuts
  
  div(class="row m-1")
    - let create = `dispatch(\"/nuts/create\")`
    button.btn( class="btn-primary ml-1", onclick= create) create
    each nut,index in nutDesc
      -let destination = `dispatch(\"/nuts/update?id=${nut._id}\")`
      - let detailLink = `dispatch(\"/nuts/detail?id=${nut._id}\")`
      div(class = "col-sm-2", onclick=`buy(${index})`) #{nut.nutName} - #{nut.Price} - #{nut.Quantity}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-primary ml-1", onclick= detailLink) detail
  
  script.
    function dispatch(path)
      {
        window.location.href=path
      }